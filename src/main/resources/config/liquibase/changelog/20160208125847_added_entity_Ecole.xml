<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Ecole.
    -->
    <changeSet id="20160208125847" author="jhipster">
        <createTable tableName="ecole">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="intitule" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            
            <column name="adresse" type="varchar(255)"/>
            
            <column name="site_web" type="varchar(255)"/>
            
            <column name="categorie" type="varchar(255)"/>
            
            <column name="gps_latitude" type="varchar(255)"/>
            
            <column name="gps_longitude" type="varchar(255)"/>
            
            <column name="user_id" type="bigint"/>
            <column name="pays_id" type="bigint"/>
            <column name="region_id" type="bigint"/>
            <column name="ville_id" type="bigint"/>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="ecole"
                                 constraintName="fk_ecole_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>

        <addForeignKeyConstraint baseColumnNames="pays_id"
                                 baseTableName="ecole"
                                 constraintName="fk_ecole_pays_id"
                                 referencedColumnNames="id"
                                 referencedTableName="pays"/>

        <addForeignKeyConstraint baseColumnNames="region_id"
                                 baseTableName="ecole"
                                 constraintName="fk_ecole_region_id"
                                 referencedColumnNames="id"
                                 referencedTableName="region"/>

        <addForeignKeyConstraint baseColumnNames="ville_id"
                                 baseTableName="ecole"
                                 constraintName="fk_ecole_ville_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ville"/>

        <createTable tableName="ecole_classe_type">
            <column name="classe_types_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="ecoles_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="ecoles_id, classe_types_id" tableName="ecole_classe_type"/>

        <addForeignKeyConstraint baseColumnNames="ecoles_id"
                                 baseTableName="ecole_classe_type"
                                 constraintName="fk_ecole_classe_type_classetype_id"
                                 referencedColumnNames="id"
                                 referencedTableName="ecole"/>

        <addForeignKeyConstraint baseColumnNames="classe_types_id"
                                 baseTableName="ecole_classe_type"
                                 constraintName="fk_ecole_classe_type_ecole_id"
                                 referencedColumnNames="id"
                                 referencedTableName="classe_type"/>
        
    </changeSet>
</databaseChangeLog>
